<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.supinfo.wherescage.activities.PlayFullScreen">

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:fitsSystemWindows="true"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:adjustViewBounds="false"
            android:cropToPadding="false"
            />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/clikeable1"
            android:onClick="clickOnNico"

            />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/cache"
        android:layout_width="3000px"
        android:layout_height="3000px"
        android:background="@android:color/darker_gray"
        android:visibility="invisible"
        >

    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/chrono"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/black"
            android:gravity="center"
            android:text="MN:SC:MSC"
            android:textColor="@android:color/holo_red_dark" />

        <Button
            android:id="@+id/boutonPause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:text="PAUSE"
            android:onClick="pause"
            />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
